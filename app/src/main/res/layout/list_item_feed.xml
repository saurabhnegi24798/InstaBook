<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:backgroundTint="@color/colorWhite"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_feedTop"
                android:layout_margin="8dp"
                android:layout_width="44dp"
                android:layout_height="44dp"/>

            <TextView
                android:id="@+id/user_name_feedTop"
                android:gravity="center"
                android:textColor="#000000"
                android:paddingLeft="8dp"
                android:textSize="20sp"
                android:text=" username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/feed_imageView"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/like_button"
            android:layout_margin="8dp"
            android:background="@drawable/dislike"
            android:layout_width="36dp"
            android:layout_height="36dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/count_of_likes"
                android:layout_width="0dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="Likes"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/count_of_comments"
                android:layout_width="0dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="Comments"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/feed_caption"
            android:paddingLeft="8dp"
            android:layout_marginTop="12dp"
            android:text="Hi this is a caption"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="64dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
